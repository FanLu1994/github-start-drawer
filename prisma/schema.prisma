generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Repo {
  id          String   @id @default(cuid())
  name        String
  fullName    String   @unique
  description String?
  stars       Int      @default(0)
  forks       Int      @default(0)
  language    String?
  url         String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // AI描述字段
  aiDescription String?
  
  // 标签列表字段
  tags         String[]
  
  // 软删除字段
  isDeleted    Boolean  @default(false)
  
  @@map("repos")
}

model Tag {
  id   String @id @default(cuid())
  name String @unique
  
  @@map("tags")
}
